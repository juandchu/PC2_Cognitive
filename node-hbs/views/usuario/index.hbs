<h1>{{title}}</h1>

<h1>Estudiantes</h1>
    <p >
        <div class="container">
            <h3><a href="/usuarios/create">Ingresar Estudiante</a></h3>
            <h1>Tabla de Estudiantes</h1>
            {{#if usuarios }}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Celular</th>
                            <th>Codigo</th>
                            <th>Carrera</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each usuarios }}
                        <tr>
                            <td><a href="/usuarios/show/{{ _id }}">{{ nombre }}</a></td>
                            <td>{{ apellido }}</td>
                            <td>{{ email }}</td>
                            <td>{{ celular }}</td>
                            <td>{{ codAlum }}</td>
                            <td>{{ carrera }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Usuarios no encontrados.</div>
            {{/if}}
        </div>
    </p>

